# ===============================
# EJEMPLO DE CONFIGURACIÓN (.env)
# ===============================

# --- Ruta compartida de audios ---
AUDIO_SHARE_ROOT=\\SRV\share\recordings
AUDIO_DATE_FOLDER=12_25_2025        # formato carpeta M_D_YYYY
AUDIO_EXTS=.wav,.mp3,.wma

# --- Destinos locales ---
DEST_BASE=C:\\prueba_audios\\call_eval
TXT_OUTPUT=C:\\descargas\\call_eval_txt
EXPORT_OUTPUT=C:\\descargas\\call_eval_out

# --- SQL Server (si aplica) ---
SQL_SERVER=172.16.x.x
SQL_DATABASE=CUN_REPOSITORIO
SQL_USER=usuario
SQL_PASSWORD=********

# --- Ollama (opcional) ---
USE_OLLAMA=true
OLLAMA_BASE=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct
OLLAMA_TIMEOUT=180
OLLAMA_MAX_RETRIES=2
MAX_OLLAMA_WORKERS=2

# --- Lógica borderline (opcional) ---
OLLAMA_ONLY_BORDERLINE=true
BORDERLINE_MIN=0.45
BORDERLINE_MAX=0.90
REVIEW_MIN_CONF=0.65
