\
# Región
REGION=us-east-1

# Bucket/prefijo donde Transcribe escribe los JSON
OUT_BUCKET=mi-bucket-salidas
OUT_PREFIX=txt/prue

# Idioma: "auto" o ej "es-US"
LANGUAGE=auto

# Speaker labels: 0 desactivado, 2+ activado
SPEAKERS=0

# Excel (en S3) con correos aprobados
BASE_VENTAS_BUCKET=mi-bucket-config
BASE_VENTAS_KEY=path/aprobados.xlsx
# (Opcional) hoja específica del Excel
APPROVED_SHEET=
# (Opcional) nombre de columnas a buscar
EMAIL_COLUMNS=correo,email

# (Opcional) limitar extensiones procesadas (sin punto)
ALLOWED_EXTS=wav,mp3,m4a,flac,wma

# (Opcional) regex para extraer correo del key
EMAIL_REGEX=[\w.+-]+@[\w-]+\.[\w.-]+
