# ===============================
# Configuración scraper (ejemplo)
# ===============================

# URL de la lista (People Management)
LIST_URL=https://hrtech.pdaprofile.com/app/people-managment

# Carpeta local donde Chrome descargará PDFs
DOWNLOAD_DIR=C:\pda_reports\downloads

# Carpeta compartida (misma ruta en todos los equipos) para consolidar PDFs e índice
SHARED_DIR=C:\pda_reports\shared

# Chrome DevTools (si conectas a un Chrome ya abierto con --remote-debugging-port)
DEBUG_ADDR=127.0.0.1:9222

# Timeouts / performance
WAIT=25
PREFERRED_PAGE_SIZE=200
MAX_ROWS=0   # 0 = todas las filas
